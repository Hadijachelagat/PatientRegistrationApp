<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/hospital001"
    >

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_createAccount_id"
        android:text="CREATE AN ACCOUNT"
        android:textColor="@color/colourBlack"
        android:textSize="27dp"
        android:textStyle="bold"
        android:layout_marginStart="30dp" />


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_member_id"
        android:text="already have an account ?"
        android:layout_below="@id/tv_createAccount_id"
        android:layout_marginStart="15dp"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/bt_sign_id"
        android:textColor="@color/colorPrimary"
        android:text="sign in"
        android:layout_below="@id/tv_createAccount_id"
        android:layout_toRightOf="@id/tv_member_id"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"
        android:id="@+id/tv_email_id"
        android:layout_below="@id/tv_member_id"
        android:layout_marginStart="30dp"/>



    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_below="@id/tv_email_id"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderedittexts"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colourBlue"
        android:id="@+id/tv_emailAdress_id"
        android:layout_below="@id/tv_member_id"
        android:layout_marginStart="30dp"/>



    <EditText
        android:id="@+id/et_email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:layout_below="@id/tv_email_id"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderedittexts"/>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20dp"
        android:textColor="@color/colourBlue"
        android:id="@+id/tv_username_id"
        android:layout_below="@id/et_email_id"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        />



    <EditText
        android:id="@+id/et_emailhint_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_below="@id/tv_username_id"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderedittexts"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password"
        android:textSize="20dp"
        android:textColor="@color/colourBlue"
        android:textStyle="bold"
        android:id="@+id/tv_password_id"
        android:layout_below="@id/tv_username_id"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        />



    <EditText
        android:id="@+id/et_password_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_below="@id/tv_password_id"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderedittexts"/>


    <Button
        android:id="@+id/bt_buttonCreateAccount_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_password_id"
        android:layout_marginTop="56dp"
        android:text="create account"
        android:textColor="@color/colourBlack"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="130dp"/>

























</RelativeLayout>